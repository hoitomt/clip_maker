<p class="text-right">
  <%= link_to "All Videos", videos_path %>
</p>
<div class="row">
  <h2><%= @video.name.present? ? @video.name : "Video" %></h2>
</div>

<div class="row">
  <video id="master_video" class="video-js vjs-default-skin"
    controls preload="auto" width="600"
    poster="/assets/2016_Flight_Elite_Header.png"
    data-setup='{"example_option":true}'>
    <source src=<%= @video.dropbox_url %> type="video/mp4">
    <p class="vjs-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
  </video>
</div>
